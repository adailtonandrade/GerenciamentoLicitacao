@using Domain.Enums
@model BiddingEditVM

@{
    ViewData["Title"] = "Edição de Licitação";
}

<div class="container col-md-7 mt-5">
    <center><h2>Edição da Licitação Número - @Model.Number</h2></center>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="col-md-3 form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OpeningDate" class="form-label"></label>
            <input asp-for="OpeningDate" type="date" class="form-control" />
            <span asp-validation-for="OpeningDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<BiddingStatusEnum>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Editar</button>
        <a asp-action="Index" class="btn btn-primary">Voltar a listagem</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}