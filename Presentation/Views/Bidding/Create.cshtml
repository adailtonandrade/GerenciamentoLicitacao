@model BiddingCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-7 mt-5">
    <center><h2>Cadastro de Nova Licitação</h2></center>
    <form asp-action="Create">
        <div>
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="col-md-3 form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a asp-action="Index" class="btn btn-primary">Voltar a listagem</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}